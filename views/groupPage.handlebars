<body>
	{{#if viewAlt}}

	<div class="container">
		<nav>
				<!-- Button to return to the course page of that group -->
			<button id="backCourse" class="btn btn-default btn-md" onclick="window.location.href='/course/{{course}}'">Back</button>
		</nav>

		<h1>{{title}}</h1><br>
		<h3>Uploaded Work</h3>
		<!--Button to Upload Work-->
		<p><input type="file"  accept="image/*" name="image" id="file" onclick="clickCounter()" onchange="loadFile(event)" style="display: none;"></p>
		<p><label for="file" style="cursor: pointer;">Click Here To Upload Your Work</label></p>
		<script>
			var loadFile = function(event) {
			var image = document.getElementById('output');
			image.src = URL.createObjectURL(event.target.files[0]);
			//image.src = "https://miro.medium.com/max/1280/1*chMOsXhcua6_J18z7lNRXA.png";
			};
		</script>

		<!--Comment Button and Image Output-->
		<div class="thumbnail">
			<h3>Give Feedback!</h3>
			<div class="thumbnail">
			<p id="commentList">{{comments}}</p>
			</div>
			<form id="addCommentForm" role="form" method="get" action="/addComment">	
	    		<div class="form-group">

				<p><img id="output" class="img-responsive"/></p>

	      			<label for="comment">Feedback:</label>
	      			<input type="text" class="form-control" id="comment" placeholder="Your feedback here" name="comment">
	   		 	</div>
				<input type="hidden" name="grouptitle" value="{{title}}">
				<input type="hidden" name="groupimg" value="{{img}}">
	    		<input type="submit" id="submitBtn" class="btn btn-default" value="Leave comment"></input>
			</form>
		</div>
					<!-- Button to find teammates -->
		<div class="modal fade" id="modalSubscriptionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header text-center">
		        <h4 class="modal-title w-100 font-weight-bold">Add A New Member To Your Group! <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: relative; top: 3px;">
		          		<span aria-hidden="true">&times;</span>
		        	</button>
		    	</h4>
		        
		      </div>
		      <form id="addTeammateForm" role="form" method="get" action='/addNewTeammate'>
			      <div class="modal-body mx-3">
			        <div class="md-form mb-5">
			          <i class="fas fa-user prefix grey-text"></i>
			          <input type="text" id="form3" class="form-control validate" placeholder="John Doe" name="name">
			          <label data-error="wrong" data-success="right" for="form3">Name</label>
			        </div><br>

			        <div class="md-form mb-4">
			          <i class="fas fa-envelope prefix grey-text"></i>
			          <input type="email" id="form2" class="form-control validate" placeholder= "johndoe123@gmail.com" name="email">
			          <label data-error="wrong" data-success="right" for="form2">Email</label>
			        </div>
			        <input type="hidden" name="groupTitleMember" value="{{title}}">
			      </div>
			      <div class="modal-footer d-flex justify-content-center">
			      	
			        <input type="submit" class="btn btn-indigo" id="addMember"></input>
			      </div>
			    </div>
		    </form>
		  </div>
		</div>

		<br><br><br>
		<div class="text-center">
		  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalSubscriptionForm" style="position: relative; float: right; bottom: 7px; right: 7px;">Add Teammember</a>
		</div>
	</div>

{{else}}

	<div class="container">
		<nav>
				<!-- Button to return to the course page of that group -->
